
<link rel="stylesheet" href="~/css/FormPregunta.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/container.css" asp-append-version="true" />
<div class="card container-principal">

    <div class="card-body ">
        <form method="post" action="@Url.Action("RegistarPregunta","Pregunta")" enctype="multipart/form-data" onsubmit="return ValidarFormPregunta('Titulo','Detalle','categoria[]')">
            <div class="text-center">
                <h5>Rellene los siguientes campos</h5>
            </div>
            <div class="form-group border-bottom">
                <label for="Titulo">Titulo:</label>
                <input type="text" class="form-control border-0" name="titulo" id="Titulo"/>
            </div>
            <div class="form-group border-bottom">
                <label for="Detalle">Descripción de Pregunta:</label>
                <textarea class="form-control " rows="4" name="detalle" id="Detalle"></textarea>
            </div>
            <div class="form-group border-bottom">
                <label for="imagen">Adjunte imagen(no es obligatorio):</label>
                <input type="file" class="form-control border-0" name="imagen" />
            </div>
            <label id="categoriasLabel">Etiquete los ramos</label>
            @foreach (var categoria in ViewBag.Categorias)
            {
                <label class="custom-checkbox-label">
                    <input type="checkbox" class="custom-checkbox" value="@categoria.Id" name="categoria[]" id="Ramo"/>
                    <span class="custom-checkbox-btn">@categoria.Nombre</span>
                </label>
            }
            <div class="text-center">
                <button type="submit" class="btn btn-warning">Preguntar</button>
            </div>
        </form>


</div>


</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script asp-src-include="~/js/validaciones.js"></script>
<script>
    // Espera a que el documento esté listo
    $(document).ready(function () {
        // Agrega un evento de cambio para cambiar el color al seleccionar/deseleccionar
        $('.custom-checkbox').change(function () {
            var checkbox = $(this);
            var btn = checkbox.closest('.custom-checkbox-label').find('.custom-checkbox-btn');
            btn.toggleClass('selected', checkbox.prop('checked'));
        });
    });

    

</script>



